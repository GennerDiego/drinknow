<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">

<LinearLayout android:id="@+id/linearImageDrink"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:padding="2dp"
    android:layout_marginRight="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/drink_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:elevation="10dp"
        android:padding="2dp" />
    <!--app:civ_border_color="@color/colorAccent"
        app:civ_border_width="1dp" !-->

</LinearLayout>


    <!--<CheckedTextView-->
        <!--android:id="@+id/drink_name"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_marginLeft="10dp"-->
        <!--android:checkMark="?android:attr/textCheckMark"-->

        <!--android:fontFamily="@font/quicksand_book"-->
        <!--android:gravity="center"-->
        <!--android:lineSpacingExtra="2sp"-->
        <!--android:textAlignment="center"-->
        <!--android:textSize="25sp" />-->

    <TextView
        android:id="@+id/drink_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"

        android:checkMark="?android:attr/textCheckMark"
        android:fontFamily="@font/quicksand_book"
        android:gravity="center"
        android:lineSpacingExtra="2sp"
        android:textAlignment="center"
        android:textSize="25sp" />

    <CheckBox
        android:id="@+id/drink_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignBaseline="@+id/drink_name"
        android:layout_alignBottom="@+id/drink_name"
        android:layout_toLeftOf="@+id/linearImageDrink"
        android:layout_toStartOf="@+id/linearImageDrink"
        android:button="?android:attr/textCheckMark" />

    <TextView
        android:id="@+id/drink_description"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:autoSizeTextType="none"
        android:layout_below="@id/drink_name"
        android:lines="2"
        android:autoSizeMinTextSize="16sp"
        android:fontFamily="@font/caviar_dreams_bold"/>




</RelativeLayout>