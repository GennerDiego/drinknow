<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.guimaraescosta.drinknow.activity.DrinksActivity">


        <ImageView
            android:id="@+id/event_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


    <LinearLayout android:id="@+id/linearImageDrink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="3dip" >

        <ImageView
            android:id="@+id/drink_image"
            android:layout_width="50dp"
            android:layout_height="50dp" />

    </LinearLayout>

        <TextView
            android:id="@+id/drink_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/linearImageDrink"
            android:layout_toRightOf="@+id/linearImageDrink"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/drink_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/linearImageDrink"
            android:layout_alignBottom="@+id/linearImageDrink"
            android:textSize="20dp"/>

        <ListView
            android:id="@+id/drinks-list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_image"
            />

</RelativeLayout>
